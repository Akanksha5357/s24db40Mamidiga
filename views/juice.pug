extends layout

block content
  h1= title
  
  div.container-fluid
    div.row
      -
        let juice = results
        
      each juice,index in results
        .col-sm-2 
        div.col-sm-2(onclick=`buy(${index})`)
        
          p juice Flavor: #{juice.juice_flavor}
          p Brand: #{juice.juice_brand}
          p Price: $#{juice.juice_price.toFixed(2)}

  a(href="/") Back to index

    script. 
        function buy(index) {
            alert(`You purchased item ${index}`);
        }


